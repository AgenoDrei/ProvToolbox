	  <xs:element name="annotations" type="pix:Annotations" minOccurs="0"/>
	  <xs:element ref="pix:annotation"  minOccurs="1" maxOccurs="1"/>
	</xs:sequence>
	<xs:attribute name="id" type="xs:ID"/>
  </xs:complexType>

